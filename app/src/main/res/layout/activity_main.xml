<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        app:srcCompat="@drawable/nurse" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:layout_gravity="center_horizontal"
        android:text="Please Select the option" />

    <Button
        android:id="@+id/PatientButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:onClick="onClick"
        android:text="ADD PATIENT" />

    <Button
        android:id="@+id/UpdatePatientButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:onClick="onClick"
        android:text="UPDATE PATIENT" />

    <Button
        android:id="@+id/TestButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:onClick="onClick"
        android:text="ADD TESTS" />

    <Button
        android:id="@+id/ViewTestButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:onClick="onClick"
        android:text="VIEW TEST" />

    <fragment
        android:id="@+id/text_view_fragment"
        android:name="com.example.johnyuayan_comp304lab4.OptionsMenuFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_options_menu" />
</LinearLayout>